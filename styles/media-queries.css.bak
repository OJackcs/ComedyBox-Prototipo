@media screen and (max-width: 1400px) {
    /* Featured Artist Section */
    .container .sidebar .featured-artist .artist-content p {
        font-size: 10px;
    }

    /* Search Bar */
    .container main header .search {
        width: 50%;
    }

    /* Trending Section */
    .container main .trending .left .info h2 {
        font-size: 36px;
    }

    .container main .trending img {
        width: 200px;
        height: 180px;
    }

    /* Jokes List Section */
    .container main .jokes-list .genres {
        width: 30%;
    }

    .container main .jokes-list .genres .items {
        grid-template-columns: 1fr;
    }

    .container main .jokes-list .genres .items .item {
        padding: 10px;
    }

    .container main .jokes-list .genres .items .item p {
        font-size: 12px;
    }

    .container main .jokes-list .genres .items .item:nth-child(6),
    .container main .jokes-list .items .item .info > p {
        display: none;
    }
}

@media screen and (max-width: 1200px) {
    /* Search Bar */
    .container main header .search {
        width: 40%;
    }

    /* Trending Section */
    .container main .trending .left .info h2 {
        font-size: 24px;
    }

    .container main .trending .left .info h5 {
        display: block;
        font-size: 12px;
        margin-left: 0;
    }

    .container main .trending .left .info .buttons button {
        padding: 10px 12px;
        font-size: 12px;
    }

    .container main .trending .left .info .buttons i {
        font-size: 14px;
    }

    /* Jokes List Section */
    .container main .jokes-list .genres {
        display: none;
    }

    .container main .jokes-list .joke-list {
        width: 100%;
    }

    /* Joke Player */
    .container .right-section .joke-player {
        height: 88%;
    }

    .container .right-section .joke-player .joke-info img {
        width: 220px;
        height: 220px;
    }

    .container .right-section .joke-player .joke-info .description h3 {
        font-size: 22px;
    }

    .container .right-section .joke-player .joke-info .progress {
        margin: 0;
    }

    .container .right-section .joke-player .joke-info .progress .active-line {
        width: 80px;
    }

    .container .right-section .joke-player .joke-info .progress .deactive-line {
        width: 40px;
    }

    .container .right-section .joke-player .joke-info .progress .active-line::before {
        left: 80px;
    }

    .container .right-section .joke-player .player-actions .buttons {
        margin-top: 30px;
    }

    .container .right-section .joke-player .player-actions .buttons .play-button {
        padding: 10px;
        border-radius: 16px;
    }
}

@media screen and (max-width: 992px) {
    .container {
        grid-template-columns: 3fr 2fr;
    }

    /* Sidebar */
    .container .sidebar {
        position: absolute;
        left: -100%;
    }

    .container .sidebar .featured-artist {
        display: none;
    }

    /* Header */
    .container main header .nav-link a {
        font-size: 13px;
    }

    .container main header .search {
        width: 38px;
    }

    .container main header .search input {
        display: none;
    }

    /* Trending Section */
    .container main .trending img {
        width: 120px;
        height: 100px;
        margin-top: 66px;
    }

    /* Jokes List */
    .container main .jokes-list {
        margin-top: 40px;
    }

    /* Joke Player */
    .container .right-section .joke-player {
        height: 87%;
    }

    .container .right-section .joke-player .joke-info img {
        width: 180px;
        height: 180px;
    }

    .container .right-section .joke-player .player-actions .buttons {
        margin-top: 38px;
    }

    .container .right-section .joke-player .player-actions .buttons i {
        font-size: 18px;
    }

    /* Menu Buttons */
    .container main header .nav-link button,
    .container .sidebar .logo button {
        display: flex;
    }
}

@media screen and (max-width: 768px) {
    .container {
        grid-template-columns: 1fr;
    }

    /* Hide sections on mobile */
    .container main .trending,
    .container main .jokes-list {
        display: none;
    }

    /* Search Bar */
    .container main header .search {
        width: 40%;
    }

    .container main header .search input {
        display: block;
    }

    /* Right Section */
    .container .right-section {
        padding: 20px 36px;
    }

    .container .right-section .profile {
        justify-content: center;
        margin-bottom: 20px;
    }

    .container .right-section .joke-player {
        height: 100%;
    }

    .container .right-section .joke-player .joke-info img {
        width: 300px;
        height: 190px;
    }

    .container .right-section .joke-player .buttons i {
        font-size: 22px;
    }
}

/* Adicional para telas menores (375px) */
@media screen and (max-width: 375px) {
    /* Container adjustments */
    .container {
        padding: 10px;
    }

    /* Right Section */
    .container .right-section {
        padding: 15px;
    }

    .container .right-section .joke-player .joke-info img {
        width: 250px;
        height: 160px;
    }

    /* Header */
    .container main header {
        padding: 10px;
    }

    .container main header .search {
        width: 100%;
        margin: 10px 0;
    }
}