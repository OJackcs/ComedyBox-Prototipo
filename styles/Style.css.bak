* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Comic Neue', sans-serif;
}

a {
    text-decoration: none;
    color: #fff;
}

i {
    color: #fff;
    cursor: pointer;
}

img {
    object-fit: cover;
    object-position: top;
    border-radius: 8px;
}

html,
body {
    background: linear-gradient(#050505, #18181d);
    height: 100vh;
    color: #fff;
}

.container {
    display: grid;
    grid-template-columns: 1fr 4fr 2fr;
    width: 100%;
    height: 100vh;
}

.sidebar {
    background-color: #18181d;
    padding: 20px 36px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 10000;
    transition: all 0.6s ease;
    height: 100%;
}

.sidebar .logo {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
}

.sidebar .logo img {
    width: 80px;
    height: 60px;
}

.sidebar .logo a {
    font-size: 24px;
    font-weight: bold;
    transition: color 0.3s ease;
}

.sidebar .logo:hover a {
    color: #b552f7;
}

.sidebar .menu h5 {
    color: #919191;
    margin-bottom: 12px;
    text-transform: uppercase;
    font-size: 14px;
}

.sidebar .menu ul {
    list-style: none;
    padding-left: 0;
}

.sidebar .menu ul li {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 12px;
    cursor: pointer;
}

.sidebar .menu ul li a {
    font-size: 14px;
    font-weight: bold;
    color: #fff;
    transition: color 0.3s ease;
    transition: transform 0.3s ease-in-out;
}

.sidebar .menu ul li:hover a,
.sidebar .menu ul li:hover i {
    transform: scale(1.3);
    color: #b552f7;
}

.sidebar .featured-artist {
    background-color: #25252d;
    padding: 10px;
    border-radius: 6px;
    margin-top: 20px;
}

.sidebar .featured-artist .artist-header {
    display: flex;
    align-items: center;
    gap: 10px;
}

.sidebar .featured-artist .artist-header img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
}

.sidebar .featured-artist .artist-header img:hover {
    transform: scale(1.3);
}

.sidebar .featured-artist h4 {
    font-size: 14px;
    text-align: justify;
}

.sidebar .featured-artist span {
    font-size: 16px;
    cursor: pointer;
}

.sidebar .featured-artist:hover span {
    color: #b552f7;
    transition: all 0.3s ease;
}

.sidebar .featured-artist .artist-content {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 10px;
}

.sidebar .featured-artist .artist-content i {
    font-size: 24px;
}

.sidebar .featured-artist .artist-content p {
    font-size: 12px;
    text-align: justify;
}

main {
    padding: 20px;
    background-color: #25252d;
    height: 100%;
    display: flex;
    flex-direction: column;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.nav-link a {
    font-size: 18px;
    margin-right: 20px;
    color: #fff;
    font-weight: bold;
}

.nav-link a:hover {
    color: #b552f7;
}

.search {
    display: flex;
    align-items: center;
    gap: 10px;
}

.search i {
    font-size: 20px;
}

.search input {
    background-color: #18181d;
    border: none;
    padding: 10px;
    border-radius: 5px;
    color: #fff;
    width: 250px;
    font-size: 16px;
}

.search input::placeholder {
    color: #919191;
}

.container main .trending {
    margin-top: 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #fff;
}

.container main .trending .info {
    margin-top: 12px;
    padding: 26px;
}

.container main .trending .info h2 {
    font-size: 36px;
    margin-bottom: 10px;
}

.container main .trending .info h4,
.container main .trending .info h5 {
    display: inline;
}

.container main .trending .info h5 {
    margin-left: 12px;
    color: #919191;
}

.container main .trending .info h4 i {
    font-size: 24px;
    margin-right: 12px;
    transition: all 0.3s ease;
}

.container main .trending .info h4 i:hover {
    color: #b552f7;
}

.container main .trending .info .buttons {
    margin-top: 30px;
    display: flex;
    align-items: center;
    gap: 16px;
}

.container main .trending .info .buttons button {
    padding: 12px 20px;
    font-size: 16px;
    background-color: #b552f7;
    border: none;
    border-radius: 14px;
    color: #fff;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.6s ease;
}

.container main .trending .info .buttons button:hover {
    background-color: #fff;
    color: #b552f7;
}

.container main .trending .info .buttons i {
    color: #b552f7;
    font-size: 20px;
    border: 2px solid #b552f7;
    padding: 10px;
    border-radius: 50%;
    transition: all 0.6s ease;
}

.container main .trending .info .buttons i:hover {
    background-color: #b552f7;
    color: #fff;
}

.container main .trending img {
    width: 300px;
    height: 300px;
}

.container main .jokes-list {
    margin-top: 14px;
    display: flex;
    gap: 20px;
}

.container main .jokes-list .genres {
    color: #fff;
    background-color: #202026;
    padding: 20px;
    border-radius: 6px;
    width: 40%;
}

.container main .jokes-list .genres .header,
.container main .jokes-list .joke-list .header {
    color: #919191;
    font-size: 14px;
}

.container main .jokes-list .genres .items {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
}

.container main .jokes-list .genres .items .item {
    padding: 22px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    cursor: pointer;
}

.container main .jokes-list .genres .items .item p {
    font-size: 14px;
    font-weight: bold;
}

.container main .jokes-list .genres .items .item:nth-child(1) {
    background-color: #476a8a;
}

.container main .jokes-list .genres .items .item:nth-child(2) {
    background-color: #528a47;
}

.container main .jokes-list .genres .items .item:nth-child(3) {
    background-color: #66478a;
}

.container main .jokes-list .genres .items .item:nth-child(4) {
    background-color: #8a7e47;
}

.container main .jokes-list .genres .items .item:nth-child(5) {
    background-color: #8a4752;
}

.container main .jokes-list .genres .items .item:nth-child(6) {
    background-color: #478a79;
}

.container main .jokes-list .joke-list {
    background-color: #202026;
    padding: 20px;
    color: #fff;
    border-radius: 8px;
    width: 65%;
}

.container main .jokes-list .joke-list .items .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
}

.container main .jokes-list .joke-list .items .item:last-child {
    margin-bottom: 0;
}

.container main .jokes-list .joke-list .items .item .info,
.container main .jokes-list .joke-list .items .item .actions {
    display: flex;
    align-items: center;
    gap: 20px;
}

.container main .jokes-list .joke-list,
.items .item .info,
p {
    color: #919191;
    font-size: 12px;
    font-weight: bold;
    margin-top: 6px;
}

.container main .jokes-list .joke-list .items .item .info img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.container main .jokes-list .joke-list .items .item .actions p {
    font-size: 13px;
    font-weight: bold;
}

.container main .jokes-list .joke-list .items .item .actions .icon {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #32323d;
    padding: 6px;
    border: 2px solid #32323d;
    border-radius: 6px;
}

.container main .jokes-list .joke-list .items .item .actions .icon i {
    font-size: 20px;
    color: #919191;
}

.container main .jokes-list .joke-list .items .item .actions i {
    color: #919191;
}

.right-section {
    padding: 20px 36px 20px 0;
}

.container .right-section .profile {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 18px;
    margin-bottom: 40px;
}

.container .right-section .profile .user {
    display: flex;
}

.container .right-section .profile .user .left {
    display: flex;
    align-items: center;
    background: #32323d;
    padding: 6px;
    border-radius: 6px 0 0 6px;
}

.container .right-section .profile .user .left img {
    width: 30px;
    height: 30px;
}

.container .right-section .profile .user .right {
    background-color: #25252d;
    border-radius: 0 6px 6px 0;
    padding: 13px;
    color: #fff;
}

.container .right-section .joke-player{
    color: #fff;
    background-color: #202026;
    border-radius: 6px;
    height: 88%;
    display: flex;
    flex-direction: column;
}

.container .right-section .joke-player .top-section{
    padding: 20px;
    height: 86%;
}

.container .right-section .joke-player .header{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
}

.container .right-section .joke-player .joke-info{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    text-align: center;
}

.container .right-section .joke-player .joke-info img{
    width: 280px;
    height: 280px;
}

.container .right-section .joke-player .description h3{
    font-size: 26px;
    font-weight: 500;
    margin-bottom: 8px;
}

.container .right-section .joke-player .description h5{
    font-size: 16px;
    margin-bottom: 4px;
}

.container .right-section .joke-player .description p{
    color: #919191;
    font-size: 12px;
    font-weight: bold;
}

.container .right-section .joke-player .joke-info .progress{
    display:flex ;
    align-items: center;
    margin: 10px 0;
}

.container .right-section .joke-player .joke-info .progress p{
    font-size: 11px;
}

.container .right-section .joke-player .joke-info .progress .active-line{
   position: relative;
   width: 120px;
   height: 2px;
   background-color: #fff; 
   margin-left: 30px;
}

.container .right-section .joke-player .joke-info .progress .deactive-line{
    width: 80px;
    height: 2px;
    background-color: #919191; 
    margin-right: 30px;
 }

 .container .right-section .joke-player .joke-info .progress .active-line::before{
   content: "";
   background-color: #25252d;
   height: 10px;
   width: 10px;
   border: 2px solid #fff;
   position: absolute;
   top: -6px;
   left: 120px;
   border-radius: 50%;
 }

 .container .right-section .joke-player .player-actions{
    background-color: #5773ff;
    height: 26%;
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
 }

 .container .right-section .joke-player .player-actions .buttons{
    display: flex;
    align-items: center;
    gap: 30px;
    margin-top: 24px;
 }

 
 .container .right-section .joke-player .player-actions .buttons i{
    font-size: 20px;
 }

 .container .right-section .joke-player .player-actions .buttons .play-button{
    padding: 16px;
    background-color: #fff;
    color: #5773ff;
    border-radius: 18px;
 }

 .container .right-section .joke-player .player-actions .Legenda{
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    bottom: 8px;
    gap: 8px;
 }


 .container main header .nav-links buttons, 
 .container .sidebar .logo button{
    display:none;
    align-items: center;
    justify-content: center;
    background-color: #1d1d1d;
    border: 1px solid #464748;
    font-size: 20px;
    padding: 4px;
    border-radius: 8px;
    cursor: pointer;
 }